{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "vidalignacio/stock-nginx-service",
      "hostname": "nginx",
      "essential": true,
      "memory": 128,
      "links": [
        "client",
        "orchestrator"
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-nginx",
          "containerPath": "/var/log/nginx"
        }
      ]
    },
    {
      "name": "client",
      "image": "vidalignacio/stock-client-service",
      "hostname": "client",
      "essential": false,
      "memory": 128,
      "links": [
        "orchestrator"
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-client",
          "containerPath": "/var/log/client"
        }
      ]
    },
    {
      "name": "calculator",
      "image": "vidalignacio/stock-calculator-service",
      "hostname": "calculator",
      "essential": false,
      "memory": 512,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-calculator",
          "containerPath": "/var/log/calculator"
        }
      ]
    },
    {
      "name": "pricer",
      "image": "vidalignacio/stock-pricer-service",
      "hostname": "pricer",
      "essential": false,
      "memory": 128,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-pricer",
          "containerPath": "/var/log/pricer"
        }
      ]
    },
    {
      "name": "orchestrator",
      "image": "vidalignacio/stock-orchestrator-service",
      "hostname": "orchestrator",
      "essential": false,
      "memory": 512,
      "links": [
        "calculator",
        "pricer",
        "redis"
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-orchestrator",
          "containerPath": "/var/log/orchestrator"
        }
      ]
    },
    {
      "name": "redis",
      "image": "vidalignacio/stock-redis-service",
      "hostname": "redis",
      "essential": false,
      "memory": 256,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-redis",
          "containerPath": "/var/log/redis"
        }
      ]
    }
  ]
}